<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hijau"
    android:orientation="vertical"
    tools:context="com.sensus.diginidea.pencatatankebun.view_data_estimasi">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/hijau3"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/ketJml_luas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JUMLAH PETANI YANG MELENGKAPI PENCATATAN 1 : "
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txJml_luas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="7px"
            android:text="jumlah"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hijau2"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:text="DAFTAR PEKEBUN"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/hijau2">

        <EditText
            android:id="@+id/txCari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="search by id"
            android:inputType="numberDecimal"
            android:lines="1"
            android:maxLength="15" />

        <Button
            android:id="@+id/btCari"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cari" />
    </LinearLayout>

    <ListView
        android:id="@+id/lsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#FFFFFF"
        android:dividerHeight="7px"
        android:paddingLeft="7dp" />

</LinearLayout>